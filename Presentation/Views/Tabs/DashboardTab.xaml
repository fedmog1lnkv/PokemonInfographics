<UserControl x:Class="PokemonInfographics.Presentation.Views.Tabs.DashboardTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <lvc:PieChart Grid.Column="0" Grid.Row="0"
            Series="{Binding PieChartSeries}" />

        <lvc:CartesianChart Grid.Column="1" Grid.Row="0"
            Series="{Binding BarChartSeries}"
            XAxes="{Binding BarChartXAxes}" />

        <lvc:CartesianChart Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
            Series="{Binding ScatterChartSeries}" />

    </Grid>
</UserControl>
